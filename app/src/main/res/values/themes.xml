<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AccesoryManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Colores de marca -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <item name="colorSecondary">@color/info</item>
        <item name="colorSecondaryVariant">@color/info</item>
        <item name="colorOnSecondary">@color/on_primary</item>

        <!-- Fondos -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Theme.AccesoryManager.NoActionBar">
    </style>

    <style name="Theme.AccesoryManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AccesoryManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Theme.AccesoryManager.TextTittle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.AccesoryManager.TextSubTittle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="images" >
        <item name="android:tint">@color/text_primary</item>
    </style>



</resources>