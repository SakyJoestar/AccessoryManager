<!--                android:id="@+id/passwordRulesTextView"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:text="@string/password_rules"-->
<!--                android:textSize="12sp"-->
