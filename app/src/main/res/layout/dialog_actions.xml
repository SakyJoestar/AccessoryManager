    android:background="@drawable/bg_quick_menu"
    android:padding="6dp">

    <ListView
        android:id="@+id/actionsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:padding="0dp" />

</LinearLayout>

